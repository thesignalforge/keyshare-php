{
    "name": "signalforge/keyshare",
    "description": "Shamir's Secret Sharing with authenticated envelopes",
    "type": "library",
    "license": "MIT",
    "keywords": ["shamir", "secret-sharing", "cryptography", "threshold", "security"],
    "require": {
        "php": ">=8.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Signalforge\\KeyShare\\": "src/",
            "Signalforge\\KeyShare\\Exception\\": "src/Exception/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Signalforge\\KeyShare\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
